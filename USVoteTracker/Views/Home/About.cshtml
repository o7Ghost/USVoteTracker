@model IEnumerable<USVoteTracker.Models.Candidate>

@{
    ViewBag.Title = "Vote!";
}

<h1> Presential Candidates </h1>
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Name)</th>
        <th>@Html.DisplayNameFor(model => model.Party)</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.Party)</td>
            <td>
                <form action="Vote">
                    <button name="vote" type="submit" value="@item.Name"> Vote!</button>
                </form>
            </td>
        </tr>
    }
</table>

